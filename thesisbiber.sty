\DeclareSourcemap{%
  \maps[datatype=bibtex,overwrite=true]{%
   \map{%
     \step[fieldsource = title, match = \regexp{\s-\s}, replace = { --- }]%
   }%
   \map{%
     \step[fieldsource = url, match = \regexp{\{\\_\}}, replace = {_}]% fix Mendeley's escaping of "_" in URLs
   }%
  }%
}%

